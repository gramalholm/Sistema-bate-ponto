generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Funcionario {
  email        String      @id @map("_id")
  senha        String
  name         String      @unique
  cargo        String
  Hora_chegada String?
  Hora_saida   String?
  Horas_totais String
  pontosEmail  Ponto[]     @relation("FuncionarioByEmail")
  pontosName   Ponto[]     @relation("FuncionarioByName")
}

model Ponto {
  codigo            String      @id @default(auto()) @map("_id") @db.ObjectId
  tipo              String
  horario           DateTime    @default(now())

  funcionarioE      Funcionario @relation("FuncionarioByEmail", fields: [funcionarioEmail], references: [email])
  funcionarioEmail  String
  funcionarioN      Funcionario @relation("FuncionarioByName", fields: [funcionarioNome], references: [name])
  funcionarioNome   String
}