generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Funcionario {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  cargo        String
  turno        String
  Hora_chegada String
  Hora_saida   String
  Hora_totais  String
  registros    Registro[]
}

model Ponto {
  codigo       String      @id @default(auto()) @map("_id") @db.ObjectId
  tipo         String
  horario      DateTime
  registros    Registro[]  @relation("PontoToRegistro")
}

model Registro {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  funcionario    Funcionario @relation(fields: [funcionarioId], references: [id])
  ponto          Ponto       @relation("PontoToRegistro", fields: [pontoCod], references: [codigo])
  funcionarioId  String      @db.ObjectId
  pontoCod       String      @db.ObjectId
  data           DateTime
}
